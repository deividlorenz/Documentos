        <div class="col-10 col-sm-10">
            @RenderBody()
            <hr />
        </div>
        
    </div>
    <footer class="d-flex justify-content-center">
        <p>&copy; @DateTime.Now.Year - Documentos Application</p>
    </footer>

    @RenderSection("scripts", required: false)
